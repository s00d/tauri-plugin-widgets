{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "widget-example",
  "version": "0.3.0",
  "identifier": "com.s00d.tauri-plugin-widgets-example",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "beforeBundleCommand": "./src-tauri/macos-widget/build-widget.sh || true",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Widget Plugin Example",
        "width": 480,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
